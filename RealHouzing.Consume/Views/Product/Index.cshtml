@using RealHouzing.Consume.Models.ProductModels;
@model List<PropertyViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3 class="container">İlanlar</h3>
<br />
<br />
<div class="container">

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>İlan Başlığı</th>
            <th>İlan Türü</th>
            <th>Fiyatı</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.ProductTitle</td>
                <td>@item.ProductType</td>
                <td>@item.ProductPrice ₺</td>
                <td>@item.CategoryID</td>
                <td>
                    <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger" id="DeleteBtn"
                       onclick="return confirm('Silmek istediğinize emin misiniz?');">
                        <i class="fas fa-trash">
                        </i>Sil
                    </a>
                </td>
                <td>
                    <a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">
                        <i class="fas fa-pencil-alt">
                        </i>Güncelle
                    </a>
                </td>
            </tr>
        }
    </table>
    <br />
    <a href="/Product/AddProduct" class="btn btn-outline-info">Yeni İlan Girişi</a>
</div>



